{
  "name": "pocketpages",
  "version": "0.4.3",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun:dev:*\"",
    "serve": "pocketbase serve --hooksDir=pb_hooks --migrationsDir=pb_migrations --dir=pb_data",
    "dev:serve": "bun run serve --dev",
    "dev:css": "tailwindcss -i ./app/assets/app.tailwind.css -o ./app/assets/app.css --watch"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.8",
    "@tailwindcss/typography": "^0.5.14",
    "concurrently": "^8.2.2",
    "daisyui": "^4.12.10",
    "gobot-pocketbase": "^0.22.20-14",
    "postcss-import": "^16.1.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10"
  },
  "module": "index.ts",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailing": "all"
  },
  "trustedDependencies": [
    "esbuild",
    "gobot-pocketbase",
    "pocodex"
  ],
  "dependencies": {
    "pocketpages": "^0.5.0",
    "pocodex": "^0.0.1"
  }
}
